<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera.camera">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/bacodetitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/header"
            android:gravity="center"
            android:text="사진 촬영"
            android:textColor="@android:color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageViewId"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:src="@drawable/ic_baseline_image_24"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/capture_picture_Id"
                android:layout_width="150dp"
                android:layout_height="51dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="500dp"
                android:backgroundTint="#029aff"
                android:text="사진 촬영하기"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/ImageViewId"
                app:layout_constraintTop_toBottomOf="@+id/ImageViewId" />

            <Button
                android:id="@+id/send_sms2"
                android:layout_width="150dp"
                android:layout_height="51dp"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="500dp"
                android:backgroundTint="#029aff"
                android:text="메시지 전송"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>