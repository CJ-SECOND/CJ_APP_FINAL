<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".task.task_request_list">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/border_linear"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_request"
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:text="신청"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/alarmbutton"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:background="@drawable/img_nofication" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_location"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:entries="@array/구역설정"
            android:spinnerMode="dropdown" />

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="#3fff"
                android:dividerHeight="5dp"></ListView>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_linear4"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_to_map3"
                android:layout_width="82dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff0000"
                android:drawableTop="@drawable/img_location_gray"
                android:drawablePadding="-5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:text="지도"
                android:textColor="#dfe2eb" />


            <Button
                android:id="@+id/btn_to_barcode3"
                android:layout_width="82dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff0000"
                android:drawableTop="@drawable/img_scan_gray"
                android:drawablePadding="-5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:text="등록"
                android:textColor="#dfe2eb"/>

            <Button
                android:id="@+id/btn_to_request3"
                android:layout_width="82dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff0000"
                android:drawableTop="@drawable/img_addcircle_black"
                android:drawablePadding="-5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:text="업무 신청"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btn_to_delivery3"
                android:layout_width="82dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff0000"
                android:drawableTop="@drawable/img_car_gray"
                android:drawablePadding="-5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:text="배송현황"
                android:textColor="#dfe2eb"/>

            <Button
                android:id="@+id/btn_to_more3"
                android:layout_width="82dp"
                android:layout_height="63dp"
                android:layout_alignParentBottom="true"
                android:background="#00ff0000"
                android:drawableTop="@drawable/img_menu_gray"
                android:drawablePadding="-5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:text="더보기"
                android:textColor="#dfe2eb" />

        </LinearLayout>
</LinearLayout>